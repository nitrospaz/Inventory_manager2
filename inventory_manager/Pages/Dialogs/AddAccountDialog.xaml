<ContentDialog
    x:Class="inventory_manager.Pages.Dialogs.AddAccountDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Account"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <TextBox x:Name="AccountNameTextBox" Header="Account Name" Margin="0,0,0,10"/>
        <TextBlock x:Name="AccountNameErrorTextBlock" Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10"/>
    </StackPanel>
</ContentDialog>
